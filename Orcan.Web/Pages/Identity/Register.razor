@page "/comecar"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="imgs/logoOrcan.png"
                     alt="Controle - financeiro"
                     width="200" />
            </div>

            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">

                <MudTextField T="string"
                              Label="E-mail"
                              HelperText="Campo obrigatório"
                              InputType="InputType.Email"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email" />

                <MudTextField T="string"
                              Label="Senha"
                              HelperText="Campo obrigatório"
                              InputType="InputType.Password"
                              For="@(() => InputModel.Password)"
                              @bind-Value="InputModel.Password" />
            <div class="d-flex mt-8">
               @if(IsBusy)
               {
                        <MudProgressCircular Size="Size.Medium" Color="Color.Info" Indeterminate="true" />
               }else
               {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">COMECAR</MudButton>
                        <MudSpacer />
                        <MudButton Href="/login" Variant="Variant.Filled">JÁ TENHO UMA CONTA</MudButton>
               }
            </div>
            </EditForm>

        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    MudForm? _mudForm;
}
