@page "/home"
@inherits LayoutComponentBase

<style>
    :root {
        --primary-green: #10b981; /* verde esmeralda */
        --primary-green-dark: #059669;
        --background: #ecfdf5;
        --container-bg: #ffffff;
        --text-color: #1f2937;
        --shadow: 0 12px 24px rgba(0, 0, 0, 0.06);
    }

    body {
        font-family: 'Raleway', sans-serif;
        font-size: 16px;
        font-weight: 400;
        margin: 0;
        padding: 0;
        background: var(--background);
        color: var(--text-color);
    }

    .custom-container {
        background-color: var(--container-bg);
        padding: 32px;
        border-radius: 12px;
        box-shadow: var(--shadow);
        width: 100%;
        max-width: 650px;
        transition: 0.3s ease-in-out;
    }

        .custom-container:hover {
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
            transform: translateY(-4px);
        }

    h1.page-title {
        font-size: 30px;
        font-weight: 700;
        margin-bottom: 36px;
        text-align: center;
        color: var(--primary-green-dark);
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 24px;
        margin-top: 12px;
        margin-bottom: 24px; /* Espaço extra na parte inferior */
    }

    .form-input {
        border: 1px solid #d1d5db;
        border-radius: 12px;
        font-size: 16px;
        padding: 8px 12px;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
        background-color: #f9fafb;
        color: #4b5563;
        text-align: left; /* Texto alinhado à esquerda */
    }

        .form-input::placeholder {
            text-align: center; /* Centralizando o placeholder */
            padding-left: 0;
            color: #9ca3af;
            transition: color 0.3s ease;
        }

        .form-input:focus::placeholder {
            color: var(--primary-green);
        }

        .form-input:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 8px rgba(16, 185, 129, 0.3);
            outline: none;
        }

    .button {
        padding: 16px 24px;
        background-color: var(--primary-green);
        color: white;
        font-weight: 600;
        font-size: 16px;
        border-radius: 12px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        width: 100%;
        margin-top: 20px;
    }

        .button:hover {
            background-color: var(--primary-green-dark);
            transform: scale(1.02); /* Efeito de hover mais suave */
        }

        .button:active {
            transform: scale(0.98);
        }

    .mud-text-field input {
        padding: 14px 18px;
        font-size: 16px;
        border-radius: 12px;
        border: 1px solid #d1d5db;
        transition: 0.2s ease;
    }

        .mud-text-field input:focus {
            border-color: var(--primary-green);
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.3);
            outline: none;
        }


    .form-group {
        gap: 16px; /* Menos espaço em telas pequenas */
    }

    
</style>

<AuthorizeView>
    <Authorized>
        <MudSnackbarProvider />
        <MudAppBar>
            Orcan
            <MudSpacer/>
            <MudText Typo="Typo.caption">
                @context.User.Identity?.Name
            </MudText>
        </MudAppBar>
        <MudLayout>
            <MudMainContent>
                <MudContainer class="custom-container">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudLayout>
    </Authorized>
    <NotAuthorized>
        <LoginRedirection/>
    </NotAuthorized>
</AuthorizeView>
